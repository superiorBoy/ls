<view class="body">
	<view class="head">
		<view class="head_back">
			<image src="{{img_url}}/uniapp/img/back.png" mode data-event-opts="{{[['tap',[['navigateBack']]]]}}" bindtap="__e"></image>
		</view>
		<view class="head_center hei_38_bold">账户充值</view>
		<view class=" head_right hei_30_bold">
			<navigator url="ls_liushui">明细</navigator>
		</view>
	</view>
	<view class="zi_body ">
		<view class="tixian_top">
			<view class="jine">{{yue}}</view>
			<view class="jine_xtx bai_30_bold">
				<image src="{{img_url}}/uniapp/lsimg/tixian_icon.png" mode></image>账号余额
			</view>
		</view>
