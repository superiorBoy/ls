<view class="body">
	<view class="head">
		<view class="head_back">
			<image src="{{img_url}}/uniapp/img/back.png" mode data-event-opts="{{[['tap',[['navigateBack']]]]}}" bindtap="__e"></image>
		</view>
		<view class="head_center hei_38_bold">详情</view>
		<view class=" head_right hei_30_bold"></view>
	</view>
	<view class="zi_body ">
		<view class="pay_top">
			<view class="pay_list "><text class="qian_30">服务项目</text>
				<view class="zhuangtai lv_20">{{item.zixunstate==1?'未付款':item.zixunstate==2?'已付款':item.zixunstate==3?'接单中':item.zixunstate==4?'已完成':item.zixunstate==5?'已取消':''}}</view><text class="hei_30">电话咨询/20分钟</text></view>
			<block wx:if="{{lvshi}}">
				<view class="pay_list height_auto dis_fir"><text class="qian_30">服务律师</text>
					<view class="ls_item">
						<view class="ls_item_top">
							<view class="ls_item_left">
								<image class="ls_item_left_tx" src="{{img_url+lvshi.photourl}}" mode></image>
								<image class="ls_item_left_ren" src="{{img_url}}/uniapp/img/renzheng2.png" mode></image>
							</view>
							<view class="ls_item_right">
								<view class="hui_24 ls_item_right_top"><text class="hei_28_bold">{{lvshi.nickname+"律师"}}</text><text class="ls_dianhua"><image class="dianhua_dizhi" src="{{img_url}}/uniapp/img/dianhua_icon.png" mode></image>{{''+lvshi.mobile+''}}</text></view>
								<view class="ls_dizhi hui_24">
									<image class="dianhua_dizhi" src="{{img_url}}/uniapp/img/dianhua_dizhi.png" mode></image>{{''+lvshi.province+"-"+lvshi.city+"-"+lvshi.area+''}}
								</view>
							</view>
						</view>
						<view class="hui_26 techang">
							<view class="shanchang">擅长:</view>
							<view class="techang_list hui_20">
								<block wx:if="{{zhuanchang_arry[lvshi.expertise1]&&zhuanchang_arry[lvshi.expertise1].shanchangname}}"><text>{{''+zhuanchang_arry[lvshi.expertise1].shanchangname+''}}</text></block>
								<block wx:if="{{zhuanchang_arry[lvshi.expertise2]&&zhuanchang_arry[lvshi.expertise2].shanchangname}}"><text>{{''+zhuanchang_arry[lvshi.expertise2].shanchangname+''}}</text></block>
								<block wx:if="{{zhuanchang_arry[lvshi.expertise3]&&zhuanchang_arry[lvshi.expertise3].shanchangname}}"><text>{{''+zhuanchang_arry[lvshi.expertise3].shanchangname+''}}</text></block>
							</view>
						</view>
					</view>
				</view>
			</block>
			<view class="pay_list "><text class="qian_30">咨询类型</text>
				<block wx:if="{{item.typeid&&fenlei[item.typeid]}}"><text class="hei_30">{{fenlei[item.typeid].typename}}</text></block>
			</view>
			<view class="pay_list wen_list">
				<view class="qian_30 wen_list_top">咨询内容</view>
				<view class="{{[' wen_list_body','',item.zixunstate==4?'qian_30':'hei_30']}}">{{item.information}}</view>
			</view>
			<view class="pay_list_jine"><text class="qian_30">支付金额</text><text class="hei_30">实付款：<text class="hong_30">{{"￥"+item.paymoney}}</text></text></view>
		</view>
	</view>
</view>