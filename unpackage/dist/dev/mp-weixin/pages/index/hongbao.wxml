<view class="body">
	<view class="head">
		<view class="head_back">
			<image src="{{img_url}}/uniapp/img/close.png" mode data-event-opts="{{[['tap',[['navigateBack']]]]}}" bindtap="__e"></image>
		</view>
		<view class="head_center hei_38_bold">发红包</view>
		<view class=" head_right hei_30_bold"></view>
	</view>
	<view class="zi_body ">
		<view class="hongbao_body">
			<view class="hongbao_top">
				<block wx:if="{{layer}}">
					<view class="hongbao_tx">
						<image class="tx" src="{{img_url+layer.photourl}}" mode></image>
						<image class="ren" src="{{img_url}}/uniapp/img/renzheng2.png" mode></image>
					</view>
				</block>
				<view class="hongbao_top hei_30">{{layer.nickname+"律师"}}</view>
			</view>
			<view class="jine"><text class="hei_34">发送金额</text>
				<view class="jine_right"><input class="hei_34" type="number" value="{{jine}}" placeholder="0.00" data-event-opts="{{[['input',[['__set_model',['','jine','$event',[]]]]]]}}" bindinput="__e" /><text>元</text></view>
			</view>
			<view class="neirong"><input class="hei_34" type="text" value="{{beizhu}}" placeholder="输入您要发送红包的内容，最多10字以内" data-event-opts="{{[['input',[['__set_model',['','beizhu','$event',[]]]]]]}}" bindinput="__e" /></view>
			<view class="zhifu">
				<view class="fangshi">
					<view data-event-opts="{{[['tap',[['radio',[2]]]]]}}" class="fangshi_list_pay" bindtap="__e">
						<view class="fangshi_left hei_28">
							<image style="width:39rpx;height:39rpx;" src="{{img_url}}/uniapp/img/pay_zhifubao.png" mode></image>支付宝支付<text class="tuijian_txt hong_22">推荐</text>
						</view><label class="radio">
							<radio value="2" checked="{{zhifu==2}}"></radio>
						</label>
					</view>
					<view data-event-opts="{{[['tap',[['radio',[3]]]]]}}" class="fangshi_list_pay" bindtap="__e">
						<view class="fangshi_left hei_28">
							<image style="width:36rpx;height:31rpx;" src="{{img_url}}/uniapp/img/yue_pay.png" mode></image>余额支付
						</view><label class="radio">
							<radio value="3" checked="{{zhifu==3}}"></radio>
						</label>
					</view>
				</view>
			</view>
			<view class="shuru_num">￥<text>{{jine?jine:'0.00'}}</text></view>
			<view class="hongbao_bottom"><button class="{{['bai_38',jine>0?'hong_bg':'']}}" type data-event-opts="{{[['tap',[['fasong',['$event']]]]]}}" bindtap="__e">发红包</button>
				<view class="qian_28">红包未领取，将于24小时后自动退回</view>
			</view>
		</view>
	</view>
</view>