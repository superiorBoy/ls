<view class="body">
	<view class="head">
		<view class="head_back">
			<image src="{{img_url}}/uniapp/img/back.png" mode data-event-opts="{{[['tap',[['navigateBack']]]]}}" bindtap="__e"></image>
		</view>
		<view class="head_center hei_38_bold">VIP服务</view>
		<view class=" head_right hei_30_bold"></view>
	</view>
	<view class="zi_body ">
		<view class="vip_body">
			<view data-event-opts="{{[['tap',[['radio',[1]]]]]}}" class="vip_list" bindtap="__e">
				<view class="vip_biaoqian vip_biaoqian1 bai_22">限时体验</view>
				<view class="vip_list_left">
					<view class="vip_jiage"><text class="lv_30"><text style="font-size:44rpx;font-weight:bold;">1</text>个月</text><text class="hui_30">￥399.00</text></view>
